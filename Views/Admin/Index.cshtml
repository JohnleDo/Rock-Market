@model ListUserAndRoleViewModel

@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section sidebar {
    <partial name="_AdminSideBar.cshtml" />
}


<h1>All Users</h1>

@if (Model.Users.Any())
{
    foreach (var user in Model.Users)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @user.Email
                </h5>
                @if (user.Roles.Any())
                {
                    foreach (var roles in user.Roles)
                    {
                        <h5 class="card-title">
                            @roles
                        </h5>
                    }
                }
                else
                {
                    <h5 class="card-title">
                        No Roles Found
                    </h5>
                }
            </div>
            <div class="card-footer">
                <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                    <a asp-action="EditUser" asp-controller="Admin" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card mb-3">
        <div class="card-header"></div>
        <div class="card-body">
            <h5 class="card-title">
                No User Found
            </h5>
        </div>
        <div class="card-footer">
            <a asp-action="EditUser" asp-controller="Admin" class="btn btn-primary">Add Roles</a>
        </div>
    </div>
}


<h1>All Roles</h1>
@if (Model.Roless.Any())
{
    <div class="card mb-3">
        <div class="card-header"></div>
        <div class="card-body">
            @foreach (var role in Model.Roless)
            {
                <h5 class="card-title">
                    Role Name: @role.Name
                </h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="CreateRole" asp-controller="Admin" class="btn btn-primary">Create Roles</a>
            <a asp-action="EditUser" asp-controller="Admin" class="btn btn-danger">Delete Roles</a>
        </div>
    </div>
}
else
{
    <div class="card mb-3">
        <div class="card-header"></div>
        <div class="card-body">
            <h5 class="card-title">
                No Roles Found
            </h5>
        </div>
        <div class="card-footer">
            <a asp-action="CreateRole" asp-controller="Admin" class="btn btn-primary">Create Roles</a>
            <a asp-action="EditUser" asp-controller="Admin" class="btn btn-primary">Delete Roles</a>
        </div>
    </div>
}
