@model AdminToolsViewModel

@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section sidebar {
    <partial name="_AdminSideBar.cshtml" />
}
<body onload="initTables()">
</body>
<div class="main-container">
    <h1> All Users</h1>
    @if (Model.Users.Any())
    {
        <table id="userTable"
               data-detail-view="true"
               data-detail-formatter="UserDetailFormatter"
               data-search="true">
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td></td>
                        <td>@user.Email</td>
                        <td>@user.Id</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Phone</td>
                        <td>@user.Address</td>
                        <td>@user.City</td>
                        <td>@user.State</td>
                        @if (user.Roles.Any())
                        {
                            string listOfRoles = "";
                            foreach (var role in user.Roles)
                            {
                                listOfRoles += role + " ";
                            }
                            <td>@listOfRoles</td>
                        }
                        else
                        {
                            <td>No Roles Found</td>
                        }
                        <td>
                            <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                                <a asp-action="EditUser" asp-controller="Admin" asp-route-id="@user.Id">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>No Users Found</h2>
    }
    <br />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createUserModal">
        Create Users
    </button>
    <input type="submit" id="btnDeleteRoles" class="btn btn-danger" value="Delete User(s)">
    <br />
    <br />


    <!--Popup modal for creating a new user-->
    <div class="modal fade" id="createUserModal" tabindex="-1" role="dialog" aria-labelledby="createUserModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createUserModalLabel">Create a New User</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!--Form submission for POST of creating a role to our Admin controller-->
                    <form asp-action="CreateUserIndex" method="post" class="mt-3">
                        <div asp-validation-summary="All" class="text-danger">
                        </div>
                        <div class="form-group row">
                            <label asp-for="createRole.RoleName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="createRole.RoleName" class="form-control" placeholder="Name">
                                <span asp-validation-for="createRole.RoleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary" style="width:auto">Create Role</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <h1>All Roles</h1>
    @if (Model.Roles.Any())
    {
        <table id="roleTable">
            <tbody>
                @foreach (var role in Model.Roles)
                {
                    <tr>
                        <td></td>
                        <td>@role.Name</td>
                        <td>@role.Id</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>No Roles Found</h2>
    }
    <br />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createRoleModal">
        Create Roles
    </button>
    <input type="submit" id="btnDeleteRoles" class="btn btn-danger" value="Delete Role(s)">

    <!--Popup modal for creating a new role-->
    <div class="modal fade" id="createRoleModal" tabindex="-1" role="dialog" aria-labelledby="createRoleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createRoleModalLabel">Create a New Role</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!--Form submission for POST of creating a role to our Admin controller-->
                    <form asp-action="CreateRoleIndex" method="post" class="mt-3">
                        <div asp-validation-summary="All" class="text-danger">
                        </div>
                        <div class="form-group row">
                            <label asp-for="createRole.RoleName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="createRole.RoleName" class="form-control" placeholder="Name">
                                <span asp-validation-for="createRole.RoleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary" style="width:auto">Create Role</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var model = JSON.parse('@Html.Raw(Json.Serialize(Model))');
</script>



